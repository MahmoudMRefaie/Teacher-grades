<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ClassBFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/classBTitle"
        android:textSize="@dimen/classTitleSize"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="@dimen/classTitleMarginLeft"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/tableMarginHorizontal"
        android:layout_marginTop="@dimen/tableMarginTop"
        android:background="@color/colorBlack">

        <TableRow
            android:id="@+id/headerTable"
            android:layout_marginTop="@dimen/headerOfTableMargin"
            android:layout_marginHorizontal="@dimen/rowTableMargin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ColumnOne_Name"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/table_header"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/cellMargin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ColumnTwo_Name"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/table_header"
                android:textStyle="bold"/>
        </TableRow>

        <TableRow
            android:layout_marginHorizontal="@dimen/rowTableMargin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mahmoud"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/firstRaw"
                android:layout_marginRight="@dimen/cellMargin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/firstRaw"/>
        </TableRow>
        <TableRow
            android:layout_marginHorizontal="@dimen/rowTableMargin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hossam"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/cellMargin"
                android:background="@color/nextRaw"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="33"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/nextRaw"/>
        </TableRow>
        <TableRow
            android:layout_marginHorizontal="@dimen/rowTableMargin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akram"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/firstRaw"
                android:layout_marginRight="@dimen/cellMargin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="44"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/firstRaw"/>
        </TableRow>
        <TableRow
            android:layout_marginHorizontal="@dimen/rowTableMargin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eslam"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/cellMargin"
                android:background="@color/nextRaw"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/nextRaw"/>
        </TableRow>
        <TableRow
            android:layout_marginHorizontal="@dimen/rowTableMargin"
            android:layout_marginBottom="@dimen/rowTableMargin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amr"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/firstRaw"
                android:layout_marginRight="@dimen/cellMargin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/firstRaw"/>
        </TableRow>
    </TableLayout>

</LinearLayout>