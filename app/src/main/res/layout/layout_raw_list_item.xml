<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TableLayout
        android:id="@+id/stuTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/tableMarginHorizontal"
        android:layout_marginTop="@dimen/tableMarginTop"
        android:background="@color/colorBlack">

        <TableRow
            android:id="@+id/data"
            android:layout_marginTop="@dimen/headerOfTableMargin"
            android:layout_marginHorizontal="@dimen/rowTableMargin">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/table_header"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/cellMargin"/>
            <TextView
                android:id="@+id/grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/table_header"
                android:textStyle="bold"/>
        </TableRow>
    </TableLayout>


</androidx.cardview.widget.CardView>